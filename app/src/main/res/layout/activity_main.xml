<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.henrique.app_interdiciplinarv3.Activity.MainActivity">





        <Button
            android:id="@+id/btnInserir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="carregaItemMenu"
            android:text="INSERIR LIVRO"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="110dp"

            android:layout_marginTop="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnListar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="carregaItemMenu"
            android:text="LISTAR LIVROS"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="196dp"
            android:layout_marginTop="97dp"
            android:layout_alignTop="@+id/btnInserir"
            android:layout_alignEnd="@+id/btnInserir" />

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_column="1"
            android:layout_marginBottom="140dp"
            android:layout_row="2"
            android:onClick="carregaItemMenu"
            android:text="PESQUISAR LIVROS"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="300dp" />


</RelativeLayout>
